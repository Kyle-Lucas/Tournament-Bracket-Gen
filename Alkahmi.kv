Main:

<Main>:

    canvas.before:
        Rectangle:
            size: self.size
            pos: self.pos
            source: 'Alkahmi_BG.jpg'

    BoxLayout:
        orientation: 'horizontal'
        size_hint: 1, .15
        pos_hint: { 'left': 0, 'top': 1 }
        spacing: 10
        padding: 10

        Button:
            id: left
            text: "<"
            size_hint: .2, 1
            on_release: root.Switch_Edit(self,'left')

        Button:
            id: right
            text: ">"
            size_hint: .2, 1
            on_release: root.Switch_Edit(self,'right')

        TextInput:
            id: txtinp
            text: 'Tournament Title'
            font_size: 20
            multiline: False
            on_text_validate: root.validate(self)
        
        Button:
            text: 'LOCK'
            size_hint: .2, 1

        Button: 
            text: 'SHUFFLE'
            size_hint: .2, 1


    Label:
        size_hint: 1, .1
        pos_hint: { 'left': 0, 'top': .85 }
        id: Tournament Title
        text: 'Tournament Title'
        font_size: 40
        font_name: 'Doctor Glitch.otf'
        canvas.before:
            Color:
                rgba: 0, 0, .3, .7
            Rectangle:
                size: self.size
                pos: self.pos

    GridLayout:
        size_hint: 1, .75
        pos_hint: { 'left': 0, 'top': .75 }
        rows: 1

        BoxLayout:
            orientation: 'vertical'
            padding: 20
            spacing: 30

            BoxLayout:
                orientation: 'vertical'
                spacing: 10

                Button:
                    id: Player 1
                    text: 'Player 1'

                Button:
                    id: Player 2
                    text: 'Player 2'

            BoxLayout:
                orientation: 'vertical'
                spacing: 10

                Button:
                    id: Player 3
                    text: 'Player 3'

                Button:
                    id: Player 4
                    text: 'Player 4'

            BoxLayout:
                orientation: 'vertical'
                spacing: 10

                Button:
                    id: Player 5
                    text: 'Player 5'

                Button:
                    id: Player 6
                    text: 'Player 6'

            BoxLayout:
                orientation: 'vertical'
                spacing: 10

                Button:
                    id: Player 7
                    text: 'Player 7'

                Button:
                    id: Player 8
                    text: 'Player 8'

        BoxLayout:

            orientation: 'vertical'
            padding: 40
            spacing: 80
            
            Button:
                id: Winner 1
                text: 'Winner 1'

            Button:
                id: Winner 2
                text: 'Winner 2'

            Button:
                id: Winner 3
                text: 'Winner 3'

            Button:
                id: Winner 4
                text: 'Winner 4'

        BoxLayout:

            Button:
                id: Block 3
                text: 'Block 3'
        BoxLayout:

            Button:
                id: Block 4
                text: 'Block 4'